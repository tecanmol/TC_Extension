{
  "manifest_version": 3,
  "name": "T&C Guardian",
  "version": "1.0",
  "description": "Analyzes Terms & Conditions using Gemini AI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  }
}